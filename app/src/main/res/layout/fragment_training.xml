<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/training_times_hint"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/training_title_hint"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/main_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/training_sets_hint"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/main_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/training_rest_hint"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/view_timer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/training_rest"
        android:textSize="100sp" />

    <Button
        android:id="@+id/training_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/training_done" />

</LinearLayout>